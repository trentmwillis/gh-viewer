<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        {{model.org.name}} | Repositories
      </h1>

      <h2 class="subtitle">
       {{#if model.org.description}}
         {{model.org.description}} |
        {{/if}}
        {{model.org.html_url}}
      </h2>
    </div>
  </div>
</section>

<table class="table">
  <thead>
    <tr>
      <th>Repo</th>
      <th>Stars</th>
      <th>Forks</th>
    </tr>
  </thead>
  <tbody>
    {{#each model.repos as |repo|}}
      <tr>
        <td>
          {{#link-to 'org.repo' repo.name}}
            {{repo.name}}
          {{/link-to}}
        </td>
        <td>{{repo.stargazers_count}}</td>
        <td>{{repo.forks_count}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
